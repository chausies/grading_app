<%= form_tag begin_grading_course_assignment_path(@course, @assignment) do %>
  <p>
    <%= label_tag :self_grading?, nil, "Have self-grading?" %>
    <%= radio_button_tag :self_grading?, "yes", true %>
  </p>

  <p>
    <%= label_tag :num_stud_gradings, nil, "Number of gradings per student (including self-gradings). Recommended 3." %>
    <%= number_field_tag :num_stud_gradings, "gradings per student", nil, in: 2...[10, @course.enrollment.where(status: Statuses::STUDENT).count].min %>
  </p>

  <p>
    <%= label_tag :num_reader_gradings, nil, "Number of gradings per reader." %>
    <%= number_field_tag :num_reader_gradings, "gradings per reader", nil, in: 1...[10, @course.enrollment.where(status: Statuses::STUDENT).count].min %>
  </p>

	<p>
		<%= submit_tag "Begin Grading", data: { confirm: 'Are you sure?' }, class: "btn btn-large btn-primary" %>
	</p>
<% end %>
