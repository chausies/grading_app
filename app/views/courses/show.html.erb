<% provide(:title, @course.name) %>
<h1><%= @course.name + ": " + @course.subject %></h1>
<div class="row">
  <div class="span10 offset1">
		<h3>School</h3>
		<p><%= @course.school %></p>
		<h3>Description</h3>
		<p>This is a description :3</p>

		<% if @enrollment %>
			<%= render 'enrollments/enrollment_view', new_enrollment: @enrollment %>
		<% end %>

		<% if @enrollment and @enrollment.status > Statuses::READER %>
			<%= link_to "Edit Course", edit_course_path(@course), type: "button", class: "btn btn-large btn-primary" %>
			<%#= link_to 'Destroy', @course, method: :delete, data: { confirm: 'Are you sure?' }, type: "button", class: "btn btn-danger" %>
			<%= link_to "Download Grades", course_path(@course, format: 'csv'), type: "button", class: "btn btn-large btn-success" %>
		<% end %>
  </div>
</div>
