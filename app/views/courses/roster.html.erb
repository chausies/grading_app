<% provide(:title, "#{@course.name} | Roster") %>
<h1>Roster</h1>

<div class="row">
  <div class="span12">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>SID</th>
          <th>Email</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% @enrollments.each do |enrollment| %>
          <% unless enrollment.status?(Statuses::ADMIN) %>
            <tr>
              <td><%= enrollment.participant.name %></td>
              <td><%= enrollment.sid %></td>
              <td><%= enrollment.participant.email %></td>
              <td><%= Statuses.status_to_string(enrollment.status).titleize %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
