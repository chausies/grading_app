<div class="center hero-unit">
  <h1>Welcome to Grade Me Please!!</h1>

  <h2>Sign in</h2>

  <div class="row">
    <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
    </div>
  </div>
</div>